{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ]
}