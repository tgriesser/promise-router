{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"]
}
